<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Slider Authentication Form</title>
    <link rel="stylesheet" href="/login.css">
</head>
<body>
    <div class="container">
        <div class="form-box">
            <h2>Login Form</h2>
            <div class="toggle-btn">
                <button class="btn active" onclick="showLogin()">Login</button>
                <button class="btn" onclick="showSignup()">Signup</button>
            </div>

            <form id="loginForm" class="form">
                <input type="email" placeholder="Email Address" required>
                <input type="password" placeholder="Password" required>
                <a href="#">Forgot password?</a>
                <button type="submit" class="submit-btn">Login</button>
                <p>Not a member? <a href="#">Signup now</a></p>
            </form>

            <form id="signupForm" class="form hidden">
                <input type="text" placeholder="Full Name" required>
                <input type="email" placeholder="Email Address" required>
                <input type="password" placeholder="Password" required>
                <button type="submit" class="submit-btn">Signup</button>
                <p>Already have an account? <a href="#">Login now</a></p>
                
            </form>
        </div>
    </div>

    <script>
        function showLogin() {
            document.getElementById('loginForm').classList.remove('hidden');
            document.getElementById('signupForm').classList.add('hidden');
            document.querySelector('.btn:nth-child(1)').classList.add('active');
            document.querySelector('.btn:nth-child(2)').classList.remove('active');
        }

        function showSignup() {
            document.getElementById('signupForm').classList.remove('hidden');
            document.getElementById('loginForm').classList.add('hidden');
            document.querySelector('.btn:nth-child(2)').classList.add('active');
            document.querySelector('.btn:nth-child(1)').classList.remove('active');
        }
    </script>
</body>
</html>

